{
  "name": "blues-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s build:*",
    "build:clean": "del .cache build public/build app/styles",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css --minify",
    "build:remix": "remix build",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:start": "remix dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve ./build",
    "test": "vitest",
    "typecheck": "tsc -b"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "@remix-run/node": "^1.11.0",
    "@remix-run/react": "^1.11.0",
    "@remix-run/serve": "^1.11.0",
    "@remix-run/server-runtime": "^1.11.0",
    "@simplewebauthn/browser": "^6.2.2",
    "@simplewebauthn/server": "^6.2.2",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1",
    "usehooks-ts": "^2.9.1",
    "zod": "^3.19.1",
    "zod-form-data": "^1.2.4",
    "zod-validation-error": "^0.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "^1.11.0",
    "@remix-run/eslint-config": "^1.11.0",
    "@simplewebauthn/typescript-types": "6.3.0-alpha.1",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/coverage-c8": "^0.27.2",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "happy-dom": "^8.1.4",
    "msw": "^0.49.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "prisma": "^4.9.0",
    "tailwindcss": "^3.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.27.2"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
